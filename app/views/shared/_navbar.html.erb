<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand nav-img" do %>
      <%= image_tag("stethoscope.png", :size => "50x50") %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item">
              <%= image_tag current_user.profile_pic, class: "avatar-mobile" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Accueil", root_path, class: "nav-link" %>
          </li>

          <% if current_user.todays_tour  %>
            <li class="nav-item item-custom-nav">
              <%= link_to "Ma tournée", tour_path(current_user.todays_tour), class: "nav-link" %>
            </li>
          <% end %>

          <li class="nav-item item-custom-nav">
            <%= link_to "Mon profile", user_path(current_user), class: "nav-link" %>
          </li>

          <li class="btn btn-outline-primary btn-navbar">
            <%= link_to "Me déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "text-primary" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Me connecter', new_user_session_path, method: :get, class: 'btn btn-primary' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
