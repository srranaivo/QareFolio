        <span> Voir la tournée suivante </span>
        <% end %>
      <% end %>
  </div>







  <div class="d-flex flex-column align-items-center">
    <a data-turbo-method="delete" class="btn btn-primary mt-3" href="/users/sign_out">Se déconnecter</a>
  </div>
</div>
