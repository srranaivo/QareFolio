
<div class="container">

  <div class="show-profile d-flex flex-column mt-4 align-items-center">
    <%= image_tag @user.profile_pic, class: "ms-2 me-4" %>
    <div class="d-flex flex-column">
      <h1 class="mt-3">
        <%= @user.first_name %>
        <%= @user.last_name %>
      </h1>
      <div class="d-flex flex-column mt-3 w-100">
        <div class="d-flex gap-3 justify-content-center text-primary">
          <div class="d-flex align-items-center">
            <i class="fa-sharp fa-solid fa-location-dot me-3"></i>
            <p class="m-0">
              <%= @user.address %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex flex-column align-items-center mt-5" data-controller="nurse-address">
    <%= simple_form_for (@user), html: {class: 'w-100'} do |f| %>
      <%= f.label :"Mon adresse (début de la tournée)", class: "form-label fw-bold" %>
      <%= f.text_field :address, class: "form-control mb-4" %>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" data-action="click->nurse-address#show_arrival">
        <label class="form-check-label" for="flexSwitchCheckDefault">Addresse fin de tournée différente de mon addresse</label>
      </div>
      <div class="d-none mt-4" data-nurse-address-target="arrival">
      <%= f.label :"Mon adresse d'arrivée", class: "form-label" %>
      <%= f.text_field :arrival_address, class: "form-control" %>
      </div>
      <%= f.submit :Enregistrer, class: "btn btn-primary mt-3 w-100" %>
    <% end %>
  </div>
</div>
